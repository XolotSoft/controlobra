<form name="frmStep1" id="frmStep1" method="post">
<input type="hidden" id="type" name="type" value="saveStep1"/>
<table width="550" cellpadding="0" cellspacing="0" border="1" class="boxTable">
<tfoot>
	<tr>
		<td colspan="2" align="right" class="tblPages" height="22">
       		<input type="button" name="btnNext" id="btnNext" value="Siguiente >>" class="btnGral" onclick="SaveStep1()" />
        </td>
	</tr>
</tfoot>
</table> 
<br />
<table width="550" cellpadding="0" cellspacing="0" border="1" class="boxTable">
 <thead>
    <tr>
        <th width="150" class="tblTh">Campo</th>
        <th class="tblTh">Valor</th>
  </tr>
</thead>
<tbody>    
    <tr>
    	<td height="40"><div class="tblField">* Nombre</div></td>
    	<td><div class="tblField">
        <input class="smallInput medium" name="name" id="name" type="text" size="50" value="{$info.name}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">* No. de Torres</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="items" id="items" type="text" size="50" value="{$info.items}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">* Niveles por Torre</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="levels" id="levels" type="text" size="50" value="{$info.levels}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Nivel Inicial</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="iniLevel" id="iniLevel" type="text" size="50" value="{$info.iniLevel}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Separaci&oacute;n por Nivel</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="separacion" id="separacion" type="text" size="50" value="{$info.separacion}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Areas por Nivel</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="deptos" id="deptos" type="text" size="50" value="{$info.deptos}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">No. de Ejes</div></td>
    	<td>
        <div class="tblField">
            <table width="80%" cellpadding="0" cellspacing="0" border="0" class="tblNoBorder">
            <tr>
                <td align="center">Letras</td>
                <td align="center">N&uacute;meros</td>
            </tr>
            <tr>
                <td align="center">
                    <input class="smallInput small" name="noEjesL" id="noEjesL" type="text" size="50" value="{$info.noEjesL}" style="width:100px" />
                </td>
                <td align="center">
                    <input class="smallInput small" name="noEjesN" id="noEjesN" type="text" size="50" value="{$info.noEjesN}" style="width:100px" />
                </td>
            </tr>
            </table>
        </div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">* Factor de Redondeo</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="redondeo" id="redondeo" type="text" size="50" value="{$info.redondeo}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Cajones de Est.</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="cajonesEst" id="cajonesEst" type="text" size="50" value="{$info.cajonesEst}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Bodegas</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="bodegas" id="bodegas" type="text" size="50" value="{$info.bodegas}"/></div>
        </td>
    </tr>
    <tr>
    	<td height="40"><div class="tblField">Valor Promedio x m2</div></td>
    	<td><div class="tblField">
        <input class="smallInput small" name="valPromM2" id="valPromM2" type="text" size="50" value="{$info.valPromM2}"/></div>
        </td>
    </tr>
</tbody>   
</table>
</form>