<div id="divForm">
	<form id="editMaterialForm" name="editMaterialForm" method="post">
    <fieldset>
                
        <div style="width:30%;float:left">* Cantidad:</div>
        <div style="float:left">
        <input class="smallInput small" name="quantity" id="quantity" type="text" size="50" value="{$info.quantity}"/>
        </div>
        <div style="float:left; padding-bottom:10px; padding-left:7px" id="unitMat">{$info.unit}</div>
                      
      <div style="clear:both"></div>
			<hr />
        <div class="formLine">* Campos requeridos</div>
        <div class="formLine" style="text-align:center; margin-left:300px">            
            <a class="button_grey" id="btnEditMaterial"><span>Actualizar</span></a>           
     	</div> 
        <input type="hidden" id="type" name="type" value="saveEditMaterial"/>
        <input type="hidden" id="id" name="id" value="{$info.conceptMatId}" />
        <input type="hidden" id="materialId" name="materialId" value="{$info.materialId}" />
  	</fieldset>
	</form>
</div>
